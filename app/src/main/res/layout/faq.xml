<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Icon -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu" />

            <!-- Logo -->
            <LinearLayout
                android:id="@+id/logo_container"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REFAB"
                    android:textColor="#6273A4"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp"
                android:src="@drawable/ic_search" />

            <!-- Bag Icon -->
            <ImageView
                android:id="@+id/icon_bag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_cart" />
        </RelativeLayout>

        <!-- Back Arrow and Title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F.A.Q"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="145dp" />
        </LinearLayout>

        <!-- Sections -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Apa itu Refab?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refab adalah platform distribusi kain perca yang menghubungkan donatur kain dengan penjahit atau pengguna lain yang membutuhkan kain sisa untuk keperluan kreatif dan produksi."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Bagaimana cara mendapatkan kain perca di Refab?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anda cukup membuat akun, kemudian memilih kain perca yang tersedia di katalog. Setelah itu, ikuti proses permintaan dan konfirmasi pengiriman."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Apakah ada biaya untuk menggunakan Refab?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak, penggunaan aplikasi Refab untuk mencari atau mendistribusikan kain perca gratis. Namun, untuk beberapa layanan tambahan (seperti pengiriman), mungkin ada biaya yang dijelaskan secara terpisah."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.  Bagaimana cara mendonasikan kain perca saya?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk ke akun Anda, pilih menu Donasi Kain, lalu isi detail kain perca yang ingin didonasikan, termasuk ukuran, jenis kain, dan kondisi kain."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Apa saja jenis kain yang tersedia di Refab?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refab menyediakan berbagai jenis kain seperti katun, linen, denim, sifon, jersey, kain motif bunga, polkadot, geometris, dan lain-lain."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Apakah saya bisa memilih ukuran kain perca?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya, setiap kain yang tersedia akan mencantumkan ukuran dan detail kondisi, sehingga Anda bisa memilih sesuai kebutuhan."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.
Apakah Refab menerima semua jenis kain perca?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kami menerima kain perca yang masih layak pakai: bersih, tidak sobek parah, dan cukup besar untuk digunakan kembali."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8.
Bagaimana jika saya mengalami masalah saat menggunakan aplikasi?"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silakan hubungi tim support kami melalui email: support@refab.app"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>