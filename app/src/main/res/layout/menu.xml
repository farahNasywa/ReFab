<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F9FC"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/user_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:layout_marginTop="32dp" />

    <!-- Nama -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kendal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#212121"
        android:layout_marginTop="12dp" />

    <!-- Tombol View Profile -->
    <Button
        android:id="@+id/btnViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_outline"
        android:text="View Profile"
        android:textAllCaps="false"
        android:textColor="#888888" />

    <!-- Daftar Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <!-- Item: Beranda -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/textBeranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Beranda"
                android:textColor="#212121"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Item: Notifikasi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification" />

            <TextView
                android:id="@+id/textNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Notifikasi"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Item: Pengaturan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings" />

            <TextView
                android:id="@+id/textPengaturan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Pengaturan"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Item: Produk (Tambahan Baru) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification" />

            <TextView
                android:id="@+id/textProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Produk"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Item: Kebijakan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_policy" />

            <TextView
                android:id="@+id/textKebijakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Kebijakan"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Item: Syarat & Ketentuan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_terms" />

            <TextView
                android:id="@+id/textSyarat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Syarat dan Ketentuan"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Item: FAQ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_faq" />

            <TextView
                android:id="@+id/textFAQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="FAQ"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol Keluar -->
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Keluar"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:drawableEnd="@drawable/ic_logout"
        android:drawablePadding="8dp"
        android:backgroundTint="#DB5A4E"
        android:layout_marginTop="16dp" />
</LinearLayout>
