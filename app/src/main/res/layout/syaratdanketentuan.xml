<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Icon -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu" />


            <!-- Logo -->
            <LinearLayout
                android:id="@+id/logo_container"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REFAB"
                    android:textColor="#6273A4"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp"
                android:src="@drawable/ic_search" />

            <!-- Bag Icon -->
            <ImageView
                android:id="@+id/icon_bag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_cart" />
        </RelativeLayout>

        <!-- Back Arrow and Title -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syarat dan Ketentuan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="65dp" />
        </LinearLayout>

        <!-- Content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan menggunakan aplikasi Refab, Anda setuju untuk mematuhi Syarat dan Ketentuan berikut:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Sections -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Penggunaan Layanan"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"

            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refab adalah platform untuk mendistribusikan kain perca kepada penjahit dan pengguna yang membutuhkan.\nPengguna wajib menggunakan layanan ini dengan itikad baik dan sesuai dengan tujuan yang telah ditentukan."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Akun Pengguna"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"

            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Pengguna harus memberikan informasi yang akurat dan terkini saat mendaftar akun.\n• Pengguna bertanggung jawab atas keamanan akun dan aktivitas yang terjadi dalam akun tersebut."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"

            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Konten dan Aktivitas"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Dilarang menggunakan Refab untuk tujuan yang melanggar hukum.\n• Refab berhak menghapus akun atau permintaan yang dianggap melanggar kebijakan kami."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Hak Cipta dan Kepemilikan"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seluruh logo, desain, dan konten dalam aplikasi Refab dilindungi oleh hak cipta dan tidak boleh digunakan tanpa izin tertulis dari kami."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Perubahan Layanan"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refab berhak melakukan perubahan atau penghentian layanan sewaktu-waktu tanpa pemberitahuan sebelumnya."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Batasan Tanggung Jawab"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refab tidak bertanggung jawab atas kerugian atau kerusakan yang timbul dari penggunaan layanan ini."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Persetujuan"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan menggunakan Refab, Anda dianggap telah membaca, memahami, dan menyetujui seluruh Syarat dan Ketentuan ini."
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Kontak Kami"
            android:textColor="#4A63A9"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jika Anda memiliki pertanyaan atau keluhan terkait Kebijakan Privasi ini, Anda dapat menghubungi kami di:\nEmail: support@refab.ap"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>